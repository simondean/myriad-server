#!/usr/bin/env node

'use strict';

var Optimist = require('optimist');
var MyriadServer = require('../lib/myriad_server');
var Winston = require('winston');

Winston.cli();

function exit(code) {
  process.stdout.once('drain', function () { process.exit(code); });
  process.stdout.write('');
};

var optimist = Optimist
  .usage('Usage: $0 [options] bin [args]')
  .options('h', {
    alias: 'help',
    describe: 'Displays this help message'
  })
  .options('p', {
    alias: 'port',
    default: 7777,
    describe: 'Port to listen on'
  });
var argv = optimist.argv;

if (argv.help) {
  optimist.showHelp();
  exit(0);
}
else {
  MyriadServer({ port: argv.port });
}
